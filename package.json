{
  "name": "social_network_app",
  "version": "0.0.1",
  "description": "Social network app (MERN stack)",
  "main": "dist/app.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc",
    "build-front": "npm run build --prefix front",
    "dev": "npm run build && nodemon",
    "start": "npm run clean && npm run tsc && npm run build-front && node ."
  },
  "keywords": [
    "MERN",
    "mongoDB",
    "js",
    "react",
    "redux",
    "express"
  ],
  "author": "Ivan Mazurenko",
  "license": "ISC",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/fs-extra": "^8.1.0",
    "@types/mongoose": "^5.7.6",
    "@types/node": "^13.9.1",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-prettier": "^3.1.2",
    "fs-extra": "^8.1.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.5"
  }
}